shopt -s xpg_echo

#
# Someone may have set an alias, let's just get rid of them all for this shell.
#
unalias -a

bm_arg0=$(basename $0)
manifest_dir=$1

function fail
{
	local msg="$*" 
	[[ -z "$msg" ]] && msg="failed"
	echo "$bm_arg0: $msg" >&2
	exit 1
}

function validate
{
	local count
	[[ ! -d $manifest_dir ]] && \
	    fail "Manifest directory does not exist: $manifest_dir"

	count=$(ls $manifest_dir | wc -l)
	[[ $? -eq 0 ]] || fail "ls and wc inexplicably failed"
	[[ $count -gt 0 ]] || fail "no files in $manifest_dir"
}

function build
{
	for file in $manifest_dir/*; do
		echo "Adding manifest files from $file..." >&2
		grep -v "^#" $file
		[[ $? -eq 0 ]] || fail "failed to append to manifest"
		echo "done" >&2
	done
	[[ $? -eq 0 ]] || fail "failed to remove comments from manifest"
}

if [[ -z "$1" ]]; then
	fail "Manifest directory is required"
fi

validate
build
exit 0
